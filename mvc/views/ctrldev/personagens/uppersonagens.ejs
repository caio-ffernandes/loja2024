<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Cupons</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <main>
        <h2>Atualizar cupom</h2>
        <section id="altercupons">
            <form id="form-cupom">
                <!-- Iniciando primeira -->
                <div class="row">
                    <input value="<%= personagem.id %>" aria-hidden="true" type="hidden" id="txtid" name="txtid">
                    <div class="col">
                        <label for="txtnomepersonagem" class="form-label" >Nome do personagem</label>
                        <input value="<%=personagem.nome%>" type="text" class="form-control" name="txtnomepersonagem" id="txtnomepersonagem" tabindex="1" autofocus>
                    </div>
                    <div class="col">
                        <label for="genper" class="form-label">Genero</label>
                        <select value="<%=personagem.genero%>" name="genper" id="genper" class="form-control" tabindex="3">
                            <option value="">Selecione uma opção</option>
                            <option value="M">Masculino</option>
                            <option value="F">Feminino</option>
                            </select>
                    </div>
                </div>
                <!-- Iniciando segunda linha -->
                <div class="row mt-4">
                    <div class="col">
                        <label for="tipoper" class="form-label">Tipo</label>
                        <select value="<%= personagem.tipo %>" name="tipoper" id="tipoper" class="form-control" >
                            <option value="">Selecione uma opção</option>
                            <option value="Humano">Humano</option>
                            <option value="Mago">Mago</option>
                            <option value="Coruja">Coruja</option>
                        </select>
                    </div>
                    <div class="col">
                        <label for="txtvalorpersonagem" class="form-label" >Total da moeda</label>
                        <input value="<%= personagem.totalcoin%>" type="number" class="form-control" name="txtvalorpersonagem" id="txtvalorpersonagem" tabindex="4">
                    </div>
                </div>

                <div class="col">

                    <label for="txtlatpersonagem" class="form-label" >Latitude do personagem</label>
                    <input value="<%= personagem.latitude %>" type="text" class="form-control" name="txtlatpersonagem" id="txtlatpersonagem" tabindex="1" autofocus>
                </div>
                <div class="col">

                    <label for="txtlongpersonagem" class="form-label" >Longitude do personagem</label>
                    <input value="<%= personagem.longitude %>" type="text" class="form-control" name="txtlongpersonagem" id="txtlongpersonagem" tabindex="1" autofocus>
                </div>
                <div class="col">

                    <label for="selecioneskin"  class="form-label">Skins</label>
                    <select name="selecioneskin" id="selecioneskin" class="form-control" tabindex="2">
                        <% for(let skin of skins){ %>

                            <option id="option" value="<%= skin.id %>"><%= skin.nome %></option>

                         <% } %>
                    </select>
                </div>

                <div class="row">
                    <a href="/personagem/lista" onclick="atualizar();">
                        <input type="button" class="btn btn-warning mt-4" value="Cadastrar" name="btcadcupons"
                            id="btcadcupons" tabindex="5">
                    </a>
                </div>
            </form>
        </section>
    </main>

    <script>
        document.getElementById("form-cupom").addEventListener("submit", (e) => {
            e.preventDefault();
            atualizar();
        })

        async function atualizar() {

            const personagem = {
             
                "id": document.getElementById("txtid").value,
            "nome":document.getElementById("txtnomepersonagem").value,
            "genero":document.getElementById("genper").value,
            "tipo": document.getElementById("tipoper").value,
            "totalcoin": document.getElementById("txtvalorpersonagem").value,
            "latitude":document.getElementById("txtlatpersonagem").value,
            "longitude":document.getElementById("txtlongpersonagem").value,
            "skin": document.getElementById("selecioneskin").value
            }

            const resposta = await fetch(`/personagem/alterar`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(personagem)
            })
            const json = await resposta.json()
            const status = await json

            console.log(personagem)

        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>
